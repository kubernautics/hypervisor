#!/bin/ansible-playbook
- name: Build MSIO Hypervisor OpenShift Network
  hosts: base
  become: true
  gather_facts: yes
  vars_files:
    - vars/custom.yml
    - vars/user.yml
  roles:
    - role: openvswitch
      tags: ovs
    - role: networking
      tags: net
  tasks:
    - name: Network Handoff
      shell: /root/.ccio/ocp-mini-stack/ansible/bin/init-hypervisor-network
